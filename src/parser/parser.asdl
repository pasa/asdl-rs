root = (type* types)
type = SumType(typeId, constr* constructors, attrs?)
     | ProdType(typeId, field* fields)
constr = (constrId id, field* fields)
field = Single(typeId, id?)
      | Opt(typeId, id?)
      | Sequence(typeId, id?)
attrs = (field* fields)
typeId = (str id)
constrId = (str id)
id = (str id)
